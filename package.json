{
  "name": "open-mcp-manager",
  "version": "0.9.1",
  "description": "A clean, native desktop application for managing [Model Context Protocol (MCP)](https://modelcontextprotocol.io) servers, built with Rust and Dioxus.",
  "main": "tailwind.config.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "check-env": "node scripts/check-dx.js",
    "dev": "npm run check-env && concurrently \"npm:watch:css\" \"npm:dx:serve\"",
    "dx:serve": "dx serve --platform desktop",
    "watch:css": "npx tailwindcss -i ./input.css -o ./public/tailwind.css --watch",
    "build": "npm run check-env && npm run build:css && dx bundle --platform desktop --release",
    "build:css": "npx tailwindcss -i ./input.css -o ./public/tailwind.css --minify",
    "check": "cargo check",
    "lint": "cargo clippy -- -D warnings",
    "test": "cargo test",
    "format": "cargo fmt",
    "version": "node scripts/sync-version.js",
    "release": "npm version patch && git push --follow-tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/millsydotdev/Open-MCP-Manager.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/millsydotdev/Open-MCP-Manager/issues"
  },
  "homepage": "https://github.com/millsydotdev/Open-MCP-Manager#readme",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "tailwindcss": "^3.4.19"
  }
}